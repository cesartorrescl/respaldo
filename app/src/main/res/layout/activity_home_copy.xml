<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fitsSystemWindows="true"
                android:id="@+id/area_001"
                android:background="@color/blanco">
                <ImageView
                    app:layout_widthPercent="60%"
                    app:layout_heightPercent="15%"
                    android:background="@drawable/logo"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/area_002"
                android:layout_below="@+id/area_001">
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    app:layout_heightPercent="9%"
                    android:visibility="gone"
                    android:background="@color/colorSecondary"
                    android:id="@+id/open">

                    <android.support.percent.PercentRelativeLayout
                        app:layout_widthPercent="95%"
                        app:layout_heightPercent="90%"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/border_edittext">
                        <EditText
                            app:layout_widthPercent="85%"
                            android:layout_height="wrap_content"
                            android:hint="Buscar..."
                            android:textColorHint="@color/gris"
                            android:textColor="@color/colorSecondary"
                            android:singleLine="true"
                            android:paddingLeft="10dp"
                            app:layout_marginLeftPercent="5%"
                            android:id="@+id/text_busqueda"
                            android:imeOptions="actionSearch"/>
                        <Button
                            app:layout_widthPercent="5%"
                            app:layout_heightPercent="40%"
                            android:id="@+id/limpiar"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/cerrar"
                            android:layout_centerVertical="true"
                            app:layout_marginRightPercent="3%"/>

                    </android.support.percent.PercentRelativeLayout>
                </android.support.percent.PercentRelativeLayout>
            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/usuario_registrado"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area_002">
                <LinearLayout
                    android:layout_width="match_parent"
                    app:layout_heightPercent="9%"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:background="@color/colorPrimary"
                    android:id="@+id/zona_buscar_on2">

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <android.support.percent.PercentRelativeLayout
                            app:layout_widthPercent="20%"
                            app:layout_heightPercent="100%"
                            android:id="@+id/zona12"
                            android:clickable="true">

                            <ImageView
                                app:layout_widthPercent="45%"
                                app:layout_heightPercent="70%"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/img_registrate2"
                                android:background="@drawable/menu_hamb"/>
                        </android.support.percent.PercentRelativeLayout>
                        <android.support.percent.PercentRelativeLayout
                            app:layout_widthPercent="20%"
                            app:layout_heightPercent="100%"
                            android:layout_toRightOf="@+id/zona12"
                            android:id="@+id/contUb">
                            <ImageView
                                app:layout_widthPercent="2%"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark"
                                android:layout_toEndOf="@+id/volver"
                                android:layout_centerVertical="true"/>

                            <Button
                                app:layout_widthPercent="40%"
                                app:layout_heightPercent="60%"
                                android:background="@drawable/home"
                                android:id="@+id/press_ub"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>
                        </android.support.percent.PercentRelativeLayout>
                        <android.support.percent.PercentRelativeLayout
                            app:layout_widthPercent="20%"
                            app:layout_heightPercent="100%"
                            android:layout_toRightOf="@+id/contUb"
                            android:id="@+id/contFav">
                            <ImageView
                                app:layout_widthPercent="2%"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark"
                                android:layout_toEndOf="@+id/volver"
                                android:layout_centerVertical="true"/>

                            <Button
                                app:layout_widthPercent="40%"
                                app:layout_heightPercent="60%"
                                android:background="@drawable/favoritos"
                                android:id="@+id/press_fav"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>
                        </android.support.percent.PercentRelativeLayout>
                        <android.support.percent.PercentRelativeLayout
                            app:layout_widthPercent="20%"
                            app:layout_heightPercent="100%"
                            android:layout_toRightOf="@+id/contFav"
                            android:id="@+id/categoria2">

                            <ImageView
                                app:layout_widthPercent="2%"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark"
                                android:layout_toEndOf="@+id/volver"
                                android:layout_centerVertical="true"/>
                            <Button
                                app:layout_widthPercent="40%"
                                app:layout_heightPercent="55%"
                                android:background="@drawable/categoria"
                                android:id="@+id/press_categoria2"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>
                        </android.support.percent.PercentRelativeLayout>
                        <android.support.percent.PercentRelativeLayout
                            app:layout_widthPercent="20%"
                            app:layout_heightPercent="100%"
                            android:layout_toRightOf="@+id/categoria2"
                            android:id="@+id/buscador2">

                            <ImageView
                                app:layout_widthPercent="2%"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark"
                                android:layout_toEndOf="@+id/volver"
                                android:layout_centerVertical="true"/>
                            <Button
                                app:layout_widthPercent="45%"
                                app:layout_heightPercent="60%"
                                android:id="@+id/press_buscador2"
                                android:background="@drawable/buscar"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>
                        </android.support.percent.PercentRelativeLayout>
                    </android.support.percent.PercentRelativeLayout>
                </LinearLayout>
            </android.support.percent.PercentRelativeLayout>
            <android.support.v4.widget.DrawerLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drawer_layout_der"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_below="@+id/usuario_registrado"
                android:background="@color/colorThirdary">
                <FrameLayout
                    android:id="@+id/contenedor_frame_der"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gris_fondo"
                    android:visibility="visible">
                </FrameLayout>
                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/refresh_null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:background="@color/material_grey_300">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_marginTopPercent="15%"
                            android:textSize="35sp"
                            android:text="¡Lo sentimos!"
                            android:textColor="@color/gris"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/txt_sentimos"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_marginTopPercent="2%"
                            android:textSize="17sp"
                            android:text="No hemos encontrado"
                            android:textColor="@color/gris"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/txt_encontrado"
                            android:layout_below="@+id/txt_sentimos"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_marginTopPercent="2%"
                            android:textSize="17sp"
                            android:text="información para mostrar."
                            android:textColor="@color/gris"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/txt_area"
                            android:layout_below="@+id/txt_encontrado"/>

                        <ImageView
                            app:layout_widthPercent="30%"
                            app:layout_heightPercent="25%"
                            app:layout_marginTopPercent="4%"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/txt_area"
                            android:background="@drawable/error"/>
                    </android.support.percent.PercentRelativeLayout>
                </android.support.v4.widget.SwipeRefreshLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginLeft="-65dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/menuder"
                    android:orientation="vertical">
                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <GridView
                            android:id="@+id/gridview"
                            android:layout_width="match_parent"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_height="match_parent"
                            android:dividerHeight="0dp"
                            android:numColumns="1"
                            android:scrollbars="vertical"
                            android:verticalSpacing="1dp"
                            android:horizontalSpacing="1dp"
                            android:stretchMode="columnWidth"
                            android:gravity="center_horizontal"
                            android:background="@color/blanco"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true">

                        </GridView>
                    </android.support.percent.PercentRelativeLayout>
                </LinearLayout>
            </android.support.v4.widget.DrawerLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/footer"
                android:background="@color/negro"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="3%"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="@color/blanco"
                    android:id="@+id/txt_serial"
                    android:text="Serial Nova Data" />

                <ImageView
                    app:layout_widthPercent="5%"
                    app:layout_heightPercent="3%"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/txt_serial"
                    app:layout_marginLeftPercent="30%"
                    app:layout_marginTopPercent="1%"
                    app:layout_marginBottomPercent="1%"
                    android:background="@drawable/powered"
                    android:id="@+id/img_powered"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="2%"
                    android:layout_toEndOf="@+id/img_powered"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="@color/blanco"
                    android:id="@+id/txt_powered"
                    android:text="Powered by Egoview" />

            </android.support.percent.PercentRelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blanco"
        android:id="@+id/menuizq">
    </ListView>

</android.support.v4.widget.DrawerLayout>
